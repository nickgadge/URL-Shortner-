<!DOCTYPE html>
<html>
<head>
    <title>URL Shortener</title>
    <link rel="stylesheet" href="/styles.css">


</head>
<body>
    <header style="background: linear-gradient(90deg, #eef2f4, #e0ebf2, #e1ecf3, #e3eef3, #ecf1f4);">
        <h1><a href="/" style=" color: black; text-decoration: none;">D-Link</a></h1>
        <nav>
            <% if (user) { %>
                <!-- Button to trigger the full-screen pop-up -->
                <button id="openImageBtn" class="btn">Pricing</button>

                <!-- The Modal -->
                <div id="imageModal" class="modal">
                <!-- Close button (X) -->
                <span class="close">&times;</span>
                <!-- Full-screen image -->
                <img class="modal-content" id="fullScreenImage" src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEhK0xBpdFwKiyghJB4YhfEm2HqDXevpkWtBc935-BuQIQHknKwkxBEgGqNcOFz2T4t7xIF-XavhWhPf0lw_fQ9XgKcLcJ_3UGKq7iYb2fRFksLDNEo-VDQ_S7ReIxbEKCrrvf47rZkOwRMYFNNOAWvmilaf0mD1LcK-tCZhfVroDewbyLNC4w-xuvIBGRI/w634-h291/final.png" alt="Analysis not available right now !">
                </div>

                <a href="/dashboard" class="btn">Dashboard</a>
                <a href="/auth/logout"class="btn">Logout</a>
            <% } else { %>
                <a href="/auth/login"class="btn">Login</a>
                <a href="/auth/register"class="btn">Register</a>
            <% } %>
        </nav>
        
    </header>
    <script>
        // Get the modal
        var modal = document.getElementById("imageModal");
      
        // Get the button that opens the modal
        var btn = document.getElementById("openImageBtn");
      
        // Get the <span> element that closes the modal
        var closeBtn = document.getElementsByClassName("close")[0];
      
        // When the user clicks the button, open the modal
        btn.onclick = function() {
          modal.style.display = "block";
        }
      
        // When the user clicks on <span> (x), close the modal
        closeBtn.onclick = function() {
          modal.style.display = "none";
        }
      
        // When the user clicks anywhere outside the modal content, close the modal
        window.onclick = function(event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        }
      </script>
      
